<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<targets>
		<target name="ds" xsi:type="DebugSystem" layout="${longdate}|${level:uppercase=true}|${logger}|${message:withexception=true}" />
		<target name="file" xsi:type="File" fileName="${basedir}/Logs/${shortdate}.txt" layout="${longdate}|${level:uppercase=true}|${logger}|${message:withexception=true}" />
	</targets>
	<rules>
		<logger name="*" maxlevel="Debug"  writeTo="ds" />
		<logger name="*" minlevel="Info" writeTo="file" />
	</rules>
</nlog>
<Window
    x:Class="One.Toolbox.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:One.Toolbox.ViewModels"
    Title="{Binding ApplicationTitle, Mode=OneWay}"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
    d:DesignHeight="800"
    d:DesignWidth="1200"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid x:Name="parentGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid>

            <Grid.Resources>
                <DataTemplate x:Key="menuDataTemplate" DataType="viewmodels:MainMenuItemViewModel">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <fa:IconImage Grid.Row="0" Icon="{Binding Icon}" />
                        <TextBlock Grid.Row="1" Text="{Binding Header}" />
                    </Grid>
                </DataTemplate>
            </Grid.Resources>
            <ListBox
                x:Name="LeftMainMenu"
                Margin="0,10,0,0"
                Background="Transparent"
                BorderThickness="0"
                ItemTemplate="{StaticResource menuDataTemplate}"
                ItemsSource="{Binding NavigationItems}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                SelectedItem="{Binding CurrentMenuItem}">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="DockPanel.Dock" Value="{Binding Dock}" />
                        <Setter Property="Height" Value="50" />
                        <Setter Property="Margin" Value="4,3,4,3" />
                        <Setter Property="Cursor" Value="Hand" />
                        <Setter Property="Foreground" Value="#727E96" />
                        <Setter Property="Background" Value="#ffffff" />
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#F4F5F7" />
                                <Setter Property="Foreground" Value="#417FF9" />
                            </Trigger>
                        </Style.Triggers>
                        <Style.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="15" />
                            </Style>
                        </Style.Resources>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>

                        <DockPanel IsItemsHost="True" LastChildFill="False" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
        </Grid>

        <ContentControl Grid.Column="1" Content="{Binding CurrentMenuItem.Content}" />
    </Grid>
</Window>
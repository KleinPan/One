<Page x:Class="One.Toolbox.Views.Pages.SerialMonitorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:One.Toolbox.Views.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="SerialMonitorPage"
      d:DesignHeight="440"
      d:DesignWidth="400"
      Loaded="Page_Loaded"
      mc:Ignorable="d">
    <StackPanel Margin="5">
        <Button Name="RefreshButton" Margin="0,3" Click="RefreshButton_Click" Content="{DynamicResource SerialMonitorRefresh}" />
        <ComboBox Name="PidComboBox" Margin="0,3" />
        <ComboBox Name="SerialPortComboBox" Margin="0,3" />
        <Button Name="MonitorButton" Margin="0,3" Click="MonitorButton_Click" Content="{DynamicResource SerialMonitorStart}" />
    </StackPanel>
</Page>
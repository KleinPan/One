    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="Page_Loaded"
    mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel Margin="10">


            <myuc:SettingItem Header="App theme" SubHeader="Select which app theme to display">
                <ComboBox
                    Grid.Column="1"
                    MinWidth="200"
                    ItemsSource="{Binding Source={EnumConverters:EnumBindingSource EnumType=hc:SkinType}}"
                    SelectedItem="{Binding SkinType}" />
            </myuc:SettingItem>

            <myuc:SettingItem Header="Language" SubHeader="Select which app language to display">
                <ComboBox
                    Grid.Column="1"
                    MinWidth="200"
                    SelectedIndex="0"
                    SelectedValue="{Binding CurrentLanguage}">
                    <ComboBoxItem Content="zh-CN" />
                    <ComboBoxItem Content="en-US" />
                </ComboBox>
            </myuc:SettingItem>

            <myuc:SettingItem Header="Auto Update" SubHeader="{DynamicResource AboutAutoUpdate}">
                <CheckBox IsChecked="{Binding AutoUpdate}" />
            </myuc:SettingItem>

            <myuc:SettingItem Header="test" SubHeader="subtest" />


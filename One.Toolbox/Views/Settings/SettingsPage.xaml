        <StackPanel Margin="42">
            <StackPanel.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="HorizontalAlignment" Value="Left" />
                </Style>
            </StackPanel.Resources>

            <TextBlock
                Margin="10,20,0,0"
                HorizontalAlignment="Left"
                FontSize="15"
                Text="{DynamicResource AboutDiscriptionMain}"
                TextWrapping="Wrap" />

            <TextBlock
                Margin="10,10,10,0"
                FontSize="15"
                Text="{DynamicResource AboutDiscriptionMore}"
                TextWrapping="Wrap" />

            <Button
                Name="CheckUpdateButton"
                Width="auto"
                HorizontalAlignment="Center"
                Click="CheckUpdateButton_Click"
                Content="{DynamicResource AboutLoadingUpdate}"
                IsEnabled="False" />

            <TextBlock
                Margin="10,20,0,0"
                FontSize="15"
                Text="{DynamicResource AboutDevelopers}" />
            <TextBlock
                Margin="10,0,0,0"
                FontSize="15"
                Text="{DynamicResource AboutQQGroup}" />
            <TextBlock
                Margin="10,20,0,0"
                FontSize="15"
                Text="{DynamicResource AboutTranslator}" />

            <TextBlock
                Margin="10,20,0,0"
                HorizontalAlignment="Center"
                FontSize="15"
                Text="{DynamicResource AboutGitHubText}" />
            <Button
                Name="OpenSourceButton"
                Width="auto"
                HorizontalAlignment="Center"
